@model Northwind.MVC.UI.Models.CategoryView

@{
    ViewBag.Title = "Category Page";
}

<h1>Insert Category</h1>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Insert", "Category", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<fieldset>
    <legend>Category</legend>
    <div class="editor-label">
        @Html.LabelFor(c => c.Name)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(c => c.Name)
        @Html.ValidationMessageFor(c => c.Name)
    </div>

    <div class="editor-label">
        @Html.LabelFor(c => c.Description)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(c => c.Description)
        @Html.ValidationMessageFor(c => c.Description)
    </div>

    <p>
        <input type="submit" class="btn btn-success" value="Save" />
    </p>

</fieldset>
}