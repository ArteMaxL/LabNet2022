@model IQueryable<Northwind.MVC.UI.Models.CategoryView>

@{
    ViewBag.Title = "Category Page";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Category Name</th>
                    <th scope="col">Description</th>
                    <th class="text-center" scope="col">Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <th scope="row">@category.Id</th>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td class="text-center">
                            <button id="update" type="button" class="btn btn-sm btn-success">@Html.ActionLink("Update", "Insert", new { id = category.Id })</button>

                            <button id="delete" type="button" class="btn btn-sm btn-warning">@Html.ActionLink("Delete", "Delete", new { id = category.Id }, new { onclick = "return confirm('Are you sure you want to delete?')" })</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="row" style="padding: 5px;">
            <a href="~/Category/Insert" class="btn btn-primary">Insert New Category</a>
        </div>

    </div>
</div>