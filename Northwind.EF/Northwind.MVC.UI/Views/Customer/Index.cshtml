@model IQueryable<Northwind.MVC.UI.Models.CustomerView>

@{
    ViewBag.Title = "Customer Page";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Company Name</th>
                    <th scope="col">Contact Name</th>
                    <th scope="col">Contact Title</th>
                    <th scope="col">City</th>
                    <th scope="col">Phone</th>
                    <th class="text-center" scope="col">Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <th scope="row">@customer.Id</th>
                        <td>@customer.CompanyName</td>
                        <td>@customer.ContactName</td>
                        <td>@customer.ContactTitle</td>
                        <td>@customer.City</td>
                        <td>@customer.Phone</td>
                        <td class="text-center">
                            <button id="update" type="button" class="btn btn-sm btn-success">@Html.ActionLink("Update", "Insert", new { id = customer.Id })</button>

                            <button id="delete" type="button" class="btn btn-sm btn-warning">@Html.ActionLink("Delete", "Delete", new { id = customer.Id }, new { onclick = "return confirm('Are you sure to delete?')" })</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="row" style="padding: 5px;">
            <a href="~/Customer/Insert" class="btn btn-primary">Insert New Customer</a>
        </div>

    </div>
</div>